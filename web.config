<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.webServer>
		<security>
			<requestFiltering>
				<verbs>
					<add verb="DELETE" allowed="true" />
					<add verb="PUT" allowed="true" />
					<add verb="PATCH" allowed="true" />
				</verbs>
			</requestFiltering>
		</security>
	</system.webServer>
</configuration>

